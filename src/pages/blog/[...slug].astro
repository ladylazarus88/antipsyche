---
import Layout from '../../components/Layout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import { extractHeadings, filterHeadingsForTOC } from '../../utils/table-of-contents';
import { calculateReadingTime, extractTextFromMarkdown } from '../../utils/reading-time';

export async function getStaticPaths() {
  // Support both .md and .mdx files
  const mdPostsGlob = import.meta.glob(['../../content/blog/*.md', '../../content/blog/claudio/*.md'], { eager: true });
  const mdxPostsGlob = import.meta.glob(['../../content/blog/*.mdx', '../../content/blog/claudio/*.mdx'], { eager: true });
  
  const allPosts = [...Object.values(mdPostsGlob), ...Object.values(mdxPostsGlob)] as any[];
  
  return allPosts.map((post: any) => {
    // For import.meta.glob, access raw content through compiledContent or body
    const rawContent = post.body || post.rawContent?.() || '';
    const plainText = extractTextFromMarkdown(rawContent);
    const readingTime = calculateReadingTime(plainText);
    const allHeadings = extractHeadings(rawContent);
    const tocHeadings = filterHeadingsForTOC(allHeadings);
    
    return {
      params: { slug: post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '') },
      props: { post, readingTime, tocHeadings }
    };
  });
}

const { post, readingTime, tocHeadings } = Astro.props;
const { frontmatter, Content } = post as any;

const pageTitle = frontmatter.title;
const base = import.meta.env.BASE_URL;
const publishedTime = frontmatter.date ? new Date(frontmatter.date).toISOString() : undefined;

// Determina se è un articolo "Contrappunti"
const isContrappunti = frontmatter.categories?.includes('Contrappunti') || false;
---

<Layout 
  title={pageTitle}
  subtitle={frontmatter.subtitle} 
  description={frontmatter.description || frontmatter.excerpt}
  type="article"
  publishedTime={publishedTime}
>
  <article class={`blog-post ${isContrappunti ? 'contrappunti-post' : ''}`}>
    
    {isContrappunti ? (
      <!-- HEADER PER CONTRAPPUNTI -->
      <header class="contrappunti-header">
    
        <!-- Contenitore testi centrati -->
        <div class="contrappunti-text-container">
          <!-- Titolo -->
          <h1 class="contrappunti-title">
            {frontmatter.title}
          </h1>
        
      {frontmatter.editor && (
        <div class="contrappunti-editor">
          <span class="metadata-label">A cura di:</span>
          <span class="editor-name">{frontmatter.editor}</span>
        </div>
      )}

    <!-- Metadati Contrappunti -->
        <div class="contrappunti-metadata">
          <div class="contrappunti-meta-row">
            <time class="contrappunti-date" datetime={frontmatter.date}>
              {new Date(frontmatter.date).toLocaleDateString('it-IT', {
                day: 'numeric',
                month: 'long',
                year: 'numeric'
              })}
            </time>
          </div>
        </div>
  <!-- Immagine principale a larghezza intera -->
          {frontmatter.image && (
            <div class="contrappunti-hero-image">
              <img 
                src={frontmatter.image} 
                alt={`Immagine per: ${frontmatter.title}`}
                class="hero-image"
                loading="eager"
              />
            </div>
          )}
          <!-- Sottotitolo -->
          {frontmatter.subtitle && (
            <h2 class="contrappunti-subtitle">
              {frontmatter.subtitle}
            </h2>
          )}

          <!-- Citazione -->
          {frontmatter.citation && (
            <div class="contrappunti-citation">
              <blockquote>
                {frontmatter.citation}
              </blockquote>
            </div>
          )}   
        </div>

      </header>
      
    ) : (
      <!-- HEADER STANDARD (per recensioni e altri articoli) -->
      <header class="post-header">
        <div class="book-header-container">
          <!-- Copertina a sinistra -->
          <div class="book-cover-wrapper">
            {frontmatter.image_copertina ? (
              <img 
                src={frontmatter.image_copertina} 
                alt={`Copertina: ${frontmatter.title}`}
                class="book-cover-image"
                loading="eager"
              />
            ) : (
              <div class="book-cover-placeholder">
                <span>Copertina</span>
              </div>
            )}
          </div>

          <!-- Informazioni libro a destra -->
          <div class="book-info-wrapper">
            {/* Tag categoria */}
            {frontmatter.categories && frontmatter.categories.includes('Recensione') && (
              <div class="book-tag">
                <span>Recensione</span>
              </div>
            )}

            {/* Titolo del libro */}
            <h1 class="book-title">
              {frontmatter.title?.replace(/^Recensione:\s*/i, '')}
            </h1>

            {/* Sottotitolo del libro */}
            {frontmatter.subtitle && (
              <h2 class="book-subtitle">
                {frontmatter.subtitle}
              </h2>
            )}

            {/* Autore */}
            {frontmatter.author && (
              <h3 class="book-author">
                di {frontmatter.author}
              </h3>
            )}

            {/* Estratto/descrizione */}
            {frontmatter.excerpt && (
              <p class="book-excerpt">
                {frontmatter.excerpt}
              </p>
            )}

            {/* Metadati */}
            <div class="book-metadata">
              <div class="metadata-row">
                <time class="book-date" datetime={frontmatter.date}>
                  {new Date(frontmatter.date).toLocaleDateString('it-IT', {
                    day: 'numeric',
                    month: 'long',
                    year: 'numeric'
                  })}
                </time>
                
                <span class="meta-separator">•</span>
                
                <span class="book-reading-time">{readingTime}</span>
              </div>

              {/* Categorie */}
              {frontmatter.categories && frontmatter.categories.length > 0 && (
                <div class="categories-row">
                  {frontmatter.categories
                    .filter(cat => cat !== 'Recensione')
                    .map((category: string) => (
                      <a 
                        href={`${base}categories/${category.toLowerCase().replace(/[\/\s]+/g, '-')}`} 
                        class="category-tag"
                      >
                        {category}
                      </a>
                    ))}
                </div>
              )}
            </div>
          </div>
        </div>

        {/* Linea di separazione */}
        <hr class="book-header-rule" />
      </header>
    )}

    <!-- CONTENUTO ARTICOLO (comune a entrambi) -->
    <div class="post-content">
      <Content />
    </div>

    <!-- FOOTER ARTICOLO (comune a entrambi) -->
    <footer class="post-footer">
      {frontmatter.tags && frontmatter.tags.length > 0 && (
        <div class="post-tags">
          <span class="tags-label">Tags:</span>
          <div class="tag-list">
            {frontmatter.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      )}
      
      <div class="post-navigation">
        <a href={`${base}blog`} class="back-to-blog">← Torna a tutti gli articoli</a>
      </div>
    </footer>
  </article>

</Layout>

<style>

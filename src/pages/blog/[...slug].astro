---
import Layout from '../../components/Layout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import { extractHeadings, filterHeadingsForTOC } from '../../utils/table-of-contents';
import { calculateReadingTime, extractTextFromMarkdown } from '../../utils/reading-time';

export async function getStaticPaths() {
  // Support both .md and .mdx files
  const mdPostsGlob = import.meta.glob(['../../content/blog/*.md', '../../content/blog/claudio/*.md'], { eager: true });
  const mdxPostsGlob = import.meta.glob(['../../content/blog/*.mdx', '../../content/blog/claudio/*.mdx'], { eager: true });
  
  const allPosts = [...Object.values(mdPostsGlob), ...Object.values(mdxPostsGlob)] as any[];
  
  return allPosts.map((post: any) => {
    // For import.meta.glob, access raw content through compiledContent or body
    const rawContent = post.body || post.rawContent?.() || '';
    const plainText = extractTextFromMarkdown(rawContent);
    const readingTime = calculateReadingTime(plainText);
    const allHeadings = extractHeadings(rawContent);
    const tocHeadings = filterHeadingsForTOC(allHeadings);
    
    return {
      params: { slug: post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '') },
      props: { post, readingTime, tocHeadings }
    };
  });
}

const { post, readingTime, tocHeadings } = Astro.props;
const { frontmatter, Content } = post as any;

const pageTitle = frontmatter.title;
const base = import.meta.env.BASE_URL;
const publishedTime = frontmatter.date ? new Date(frontmatter.date).toISOString() : undefined;
---

<Layout 
  title={pageTitle}
  subtitle={frontmatter.subtitle} 
  description={frontmatter.description || frontmatter.excerpt}
  type="article"
  publishedTime={publishedTime}
>
  <article class="blog-post">
    <header class="post-header">
      <!-- Header orizzontale con copertina a sinistra e dati a destra -->
      <div class="book-header-container">
        <!-- Copertina a sinistra -->
        <div class="book-cover-wrapper">
          {frontmatter.image ? (
            <img 
              src={frontmatter.image_alt} 
              alt={`Copertina: ${frontmatter.title}`}
              class="book-cover-image"
              loading="eager"
            />
          ) : (
            <div class="book-cover-placeholder">
              <span>Copertina</span>
            </div>
          )}
        </div>

        <!-- Informazioni libro a destra -->
        <div class="book-info-wrapper">
          {/* Tag categoria */}
          {frontmatter.categories && frontmatter.categories.includes('Recensione') && (
            <div class="book-tag">
              <span>Recensione</span>
            </div>
          )}

          {/* Titolo del libro */}
          <h1 class="book-title">
            {frontmatter.title?.replace(/^Recensione:\s*/i, '')}
          </h1>

          {/* Sottotitolo del libro */}
          <h2 class="book-subtitle">
            {frontmatter.subtitle?.replace(/^Recensione:\s*/i, '')}
          </h2>

          {/* Autore */}
          <h3 class="book-author">
            di {frontmatter.author}
          </h3>

          {/* Estratto/descrizione */}
          {frontmatter.excerpt && (
            <p class="book-excerpt">
              {frontmatter.excerpt}
            </p>
          )}

          {/* Metadati */}
          <div class="book-metadata">
            <div class="metadata-row">
              <time class="book-date" datetime={frontmatter.date}>
                {new Date(frontmatter.date).toLocaleDateString('it-IT', {
                  day: 'numeric',
                  month: 'long',
                  year: 'numeric'
                })}
              </time>
              
              <span class="meta-separator">•</span>
              
              <span class="book-reading-time">{readingTime}</span>
            </div>

            {/* Categorie */}
            {frontmatter.categories && frontmatter.categories.length > 0 && (
              <div class="categories-row">
                {frontmatter.categories
                  .filter(cat => cat !== 'Recensione')
                  .map((category: string) => (
                    <a 
                      href={`${base}categories/${category.toLowerCase().replace(/[\/\s]+/g, '-')}`} 
                      class="category-tag"
                    >
                      {category}
                    </a>
                  ))}
              </div>
            )}
          </div>
        </div>
      </div>

      {/* Linea di separazione */}
      <hr class="book-header-rule" />
    </header>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      {frontmatter.tags && frontmatter.tags.length > 0 && (
        <div class="post-tags">
          <span class="tags-label">Tags:</span>
          <div class="tag-list">
            {frontmatter.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      )}
      
      <div class="post-navigation">
        <a href={`${base}blog`} class="back-to-blog">← Torna a tutti gli articoli</a>
      </div>
    </footer>
  </article>

</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
  }

  /* ===== HEADER ORIZZONTALE ===== */
  .book-header-container {
    display: grid;
    grid-template-columns: minmax(200px, 300px) 1fr;
    gap: 3rem;
    align-items: start;
    margin-bottom: 3rem;
  }

  .book-cover-wrapper {
    position: relative;
    width: 100%;
    background: var(--color-surface);
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    border-radius: var(--border-radius);
    transition: transform var(--transition-speed) ease, 
                box-shadow var(--transition-speed) ease;
    aspect-ratio: 2/3;
  }

  .book-cover-wrapper:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
  }

  .book-cover-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .book-cover-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-border) 100%);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .book-info-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
  }

  .book-tag {
    margin-bottom: 1.5rem;
  }

  .book-tag span {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-accent);
    color: white;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 600;
    border-radius: var(--border-radius);
  }

  .book-title {
    font-family: var(--font-heading-primary);
    font-size: clamp(2rem, 5vw, 2.8rem);
    line-height: 1.1;
    margin: 0 0 1rem 0;
    color: var(--color-text-primary);
    font-weight: 700;
    letter-spacing: -0.01em;
  }

  .book-subtitle {
    font-family: var(--font-heading-secondary);
    font-size: clamp(1.6rem, 4vw, 2.2rem);
    line-height: 1.1;
    margin: 0 0 1rem 0;
    color: var(--color-text-primary);
    font-weight: 500;
    letter-spacing: -0.01em;
    text-transform: none; /* Sovrascrive l'uppercase globale */
  }

  .book-author {
    font-family: var(--font-heading-secondary);
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    font-style: italic;
    color: var(--color-text-secondary);
    margin: 0 0 2rem 0;
    font-weight: 400;
    line-height: 1.3;
    text-transform: none; /* Sovrascrive l'uppercase globale */
  }

  .book-excerpt {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin: 0 0 2.5rem 0;
    font-weight: 300;
    font-style: italic;
  }

  .book-metadata {
    margin-top: auto;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .metadata-row {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meta-separator {
    color: var(--color-border);
    opacity: 0.5;
  }

  .categories-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .category-tag {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    background: var(--color-surface);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
    transition: all var(--transition-speed) ease;
  }

  .category-tag:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
    text-decoration: none;
    transform: translateY(-2px);
  }

  .book-header-rule {
    height: 4px;
    background: var(--color-accent);
    border: none;
    margin: 3rem 0 0 0;
  }

  /* Contenuto specifico post */
  .post-header {
    margin-bottom: 3rem;
  }

  .post-content {
    font-size: clamp(1.2rem, 2.5vw, 1.3rem);
    line-height: 1.7;
    margin-bottom: 3rem;
  }

  .post-content :global(p) {
    text-align: justify;
  }

  /* Footer del post */
  .post-footer {
    border-top: 1px solid var(--color-border);
    padding-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-tags {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .tags-label {
    font-family: var(--font-heading-secondary);
    font-weight: 700;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-primary);
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background-color: var(--color-text-primary);
    color: var(--color-surface);
    padding: 0.25rem 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--border-radius);
  }

  .back-to-blog {
    font-family: var(--font-heading-secondary);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
    padding: 0.5rem 1rem;
    border: 2px solid var(--color-accent);
    border-radius: var(--border-radius);
    transition: all var(--transition-speed) ease;
    display: inline-block;
  }

  .back-to-blog:hover {
    background-color: var(--color-accent);
    color: white;
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 1024px) {
    .book-header-container {
      gap: 2.5rem;
    }
  }

  @media (max-width: 768px) {
    .blog-post {
      margin: 0 var(--content-padding);
    }
    
    .book-header-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .book-cover-wrapper {
      max-width: 250px;
      margin: 0 auto;
    }
    
    .book-title,
    .book-subtitle,
    .book-author,
    .book-excerpt,
    .book-tag {
      text-align: center;
    }
    
    .metadata-row {
      justify-content: center;
    }
    
    .categories-row {
      justify-content: center;
    }
    
    .post-content :global(img) {
      max-height: 70vh;
      object-fit: contain;
    }
  }

  @media (max-width: 480px) {
    .metadata-row {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
    
    .meta-separator {
      display: none;
    }
  }

  /* Dark mode adjustments */
  :global([data-theme="dark"]) .book-cover-wrapper {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  }

  :global([data-theme="dark"]) .book-cover-placeholder {
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-text-muted) 100%);
    color: var(--color-surface);
  }

  :global([data-theme="dark"]) .category-tag {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-text-muted);
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme="dark"]) .category-tag:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    console.log('=== DEBUG IMMAGINI ===');
    const images = document.querySelectorAll('.post-content img');
    
    images.forEach((img, index) => {
      console.log(`Immagine ${index}:`, img.src);
      
      // Verifica se l'immagine si è caricata
      img.addEventListener('load', () => {
        console.log(`✓ Immagine ${index} caricata:`, img.naturalWidth, 'x', img.naturalHeight);
      });
      
      img.addEventListener('error', () => {
        console.error(`✗ Immagine ${index} FALLITA:`, img.src);
        img.style.border = '3px solid red';
      });
    });
  });
</script>
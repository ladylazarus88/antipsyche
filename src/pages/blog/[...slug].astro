  }

  .book-info-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
  }

  .book-tag {
    margin-bottom: 1.5rem;
  }

  .book-tag span {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-accent);
    color: white;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    text-transform: uppercase;

    text-transform: none;
  }

  .book-excerpt {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin: 0 0 2.5rem 0;
    font-weight: 300;
    font-style: italic;
  }

  .book-metadata {
    margin-top: auto;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .metadata-row {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meta-separator {
    color: var(--color-border);
    opacity: 0.5;
  }

  .categories-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .category-tag {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    background: var(--color-surface);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
    transition: all var(--transition-speed) ease;
  }

  .category-tag:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
    text-decoration: none;
    transform: translateY(-2px);
  }

  .book-header-rule {
    height: 4px;
    background: var(--color-accent);
    border: none;
    margin: 3rem 0 0 0;
  }

  /* ===== STILI HEADER CONTRAPPUNTI ===== */
  .hero-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    max-height: 70vh;
  }

  /* Contenitore testi centrati */
  .contrappunti-text-container {
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
  }

  /* Titolo Contrappunti */
  .contrappunti-title {
    font-family: var(--font-heading-primary);
    font-size: clamp(2.5rem, 6vw, 4rem);
    text-transform: uppercase;
    margin: 0 0 1rem 0;
    color: var(--color-accent);
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .contrappunti-subtitle {
    font-family: var(--font-heading-secondary);
    font-size: clamp(2rem, 5vw, 2.8rem);
    margin: 0 0 1rem 0;
    color: var(--color-text-primary);
    font-weight: 700;
    letter-spacing: -0.02em;
    text-transform: none;
  }

    /* Citazione */
  .contrappunti-citation {
    margin: 0rem 0;
    padding: 0rem;
  }

  .contrappunti-citation blockquote {
    font-family: var(--font-heading-secondary);
    font-size: clamp(1.4rem, 4vw, 1.6rem);
    line-height: 1.4;
    color: var(--color-text-primary);
    font-weight: 200;
    font-style: italic;
    margin: 0;
    quotes: "«" "»" "‹" "›";
  }

  .contrappunti-citation blockquote::before {
    content: open-quote;
    color: var(--color-text-secondary);
    font-size: 2.5rem;
    line-height: 0;
    margin-right: 0.5rem;
    vertical-align: -0.5rem;
  }

  .contrappunti-citation blockquote::after {
    content: close-quote;
    color: var(--color-text-secondary);
    font-size: 2.5rem;
    line-height: 0;
    margin-left: 0.5rem;
    vertical-align: -0.5rem;
  }

  /* Metadati Contrappunti */
  .contrappunti-metadata {
    margin-top: none;
    padding-top: none;
  }

  .contrappunti-editor {
    margin-bottom: 0.75rem;
    font-family: var(--font-heading-secondary);
  }

  .metadata-label {
    font-weight: 600;
    color: var(--color-text-muted);
    margin-right: 0.5rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .editor-name {
    font-size: 1.2rem;
    color: var(--color-text-primary);
    font-style: italic;
  }

  .contrappunti-meta-row {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 0rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .contrappunti-categories {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .contrappunti-category-tag {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    background: var(--color-surface);
    color: var(--color-text-secondary);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
    transition: all var(--transition-speed) ease;
  }

  .contrappunti-category-tag:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
    text-decoration: none;
    transform: translateY(-2px);
  }

  /* Immagine secondaria */
  .contrappunti-secondary-image {
    max-width: 400px;
    margin: 3rem auto 0;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .secondary-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* ===== RESPONSIVE ===== */

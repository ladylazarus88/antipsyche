    .book-header-container {
      gap: 2.5rem;
    }
    
    .contrappunti-hero-image {
      max-height: 60vh;
    }
  }

  @media (max-width: 768px) {
    .blog-post {
      margin: 0 var(--content-padding);
    }
    
    .book-header-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .book-cover-wrapper {
      max-width: 250px;
      margin: 0 auto;
    }
    
    .book-title,
    .book-subtitle,
    .book-author,
    .book-excerpt,
    .book-tag {
      text-align: center;
    }
    
    .metadata-row {
      justify-content: center;
    }
    
    .categories-row {
      justify-content: center;
    }
    
    /* Contrappunti mobile */
    .contrappunti-hero-image {
      max-height: 50vh;
    }
    
    .contrappunti-text-container {
      padding: 0 1rem;
    }
    
    .contrappunti-citation {
      padding: 1.5rem;
      margin: 2rem 0;
    }
    
    .contrappunti-meta-row {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .meta-separator {
      display: none;
    }
    
    .contrappunti-secondary-image {
      max-width: 300px;
    }
  }

  @media (max-width: 480px) {
    .contrappunti-title {
      font-size: 2.2rem;
    }
    
    .contrappunti-subtitle {
      font-size: 1.3rem;
    }
    
    .contrappunti-citation blockquote {
      font-size: 1.2rem;
    }
    
    .contrappunti-secondary-image {
      max-width: 250px;
    }
  }

  /* Dark mode adjustments */
  :global([data-theme="dark"]) .book-cover-wrapper,
  :global([data-theme="dark"]) .contrappunti-secondary-image {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  }

  :global([data-theme="dark"]) .book-cover-placeholder {
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-text-muted) 100%);
    color: var(--color-surface);
  }

  :global([data-theme="dark"]) .category-tag,
  :global([data-theme="dark"]) .contrappunti-category-tag {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-text-muted);
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme="dark"]) .category-tag:hover,
  :global([data-theme="dark"]) .contrappunti-category-tag:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  :global([data-theme="dark"]) .contrappunti-citation {
    background: rgba(255, 255, 255, 0.03);
    border-left-color: var(--color-accent);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    console.log('=== DEBUG IMMAGINI ===');
    const images = document.querySelectorAll('.post-content img');
    
    images.forEach((img, index) => {
      console.log(`Immagine ${index}:`, img.src);
      
      // Verifica se l'immagine si è caricata
      img.addEventListener('load', () => {
        console.log(`✓ Immagine ${index} caricata:`, img.naturalWidth, 'x', img.naturalHeight);
      });
      
      img.addEventListener('error', () => {
        console.error(`✗ Immagine ${index} FALLITA:`, img.src);
        img.style.border = '3px solid red';
      });
    });
  });
</script>
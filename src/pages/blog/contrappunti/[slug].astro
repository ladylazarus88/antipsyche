    color: #666;
  }

  .post-tags {
    margin-bottom: 1rem;
    margin-top: 1rem;
    padding-top: 1rem;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tag {
    background-color: #f0f0f0;
    border-radius: 4px;
    padding: 0.2rem 0.5rem;
    margin-right: 0.5rem;
    font-size: 0.9rem;
  }

  .back-to-blog {
    text-decoration: none;
    color: var(--color-accent);
    font-size: 1rem;
  }

  @media screen and (max-width: 768px) {
    .contrappunti-post {
      padding: 1rem;
    }

    .contrappunti-title {
      font-size: 2rem;
    }

    .contrappunti-subtitle {
      font-size: 1.2rem;
    }
  }

  @media screen and (max-width: 480px) {
    .contrappunti-post {
      padding: 0 1rem;
    }

    .contrappunti-title {
      font-size: 1.5rem;
    }

    .contrappunti-subtitle {
      font-size: 1rem;
    }    
  }
</style>
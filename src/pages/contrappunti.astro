---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL;

// Configurazioni colori
const PALETTES = [
  { bg: '#FFF0F5', text: '#333', accent: '#8B5F65' },
  { bg: '#F0F8FF', text: '#333', accent: '#5C7080' },
  { bg: '#FFF5EE', text: '#333', accent: '#8B7355' },
  { bg: '#F5F0FF', text: '#333', accent: '#6A5F7C' }
];

// Importa tutti i post (md e mdx)
const getPosts = () => {
  const md = import.meta.glob(['../content/blog/*.md', '../content/blog/claudio/*.md'], { eager: true });
  const mdx = import.meta.glob(['../content/blog/*.mdx', '../content/blog/claudio/*.mdx'], { eager: true });

  return [...Object.values(md), ...Object.values(mdx)];
};

const filterContrappunti = (posts) => 
  posts.filter(post => post.frontmatter.page?.includes('Contrappunti'));

// Data - CORRETTO: usa contrappuntiPosts
const allPosts = getPosts();
const contrappuntiPosts = filterContrappunti(allPosts);

// Ordina SOLO i post filtrati per data
const sortedContrappuntiPosts = contrappuntiPosts
  .filter(post => post && post.frontmatter && post.frontmatter.date)
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime());

// Helper per generare URL del post
const getPostUrl = (post) => {
  const filename = post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '') || '';
  return `${base}blog/${filename}`;
};
---

<Layout title="Contrappunti | Antipsyché" description="Tutti i post di Antipsyché">
  <div class="contrappunti-page">
    <section class="page-header">
      <h1 class="page-title">Contrappunti</h1>
      <p class="page-description">Intersezioni di idee.</p>
      <hr class="page-rule" />
    </section>

    {sortedContrappuntiPosts.length > 0 ? (
      <div class="posts-list">
        {sortedContrappuntiPosts.map((post, index) => { 
          const palette = PALETTES[index % PALETTES.length];
          const postUrl = getPostUrl(post);
          
          return (
            <article class="post-item" style={`
              --post-bg: ${palette.bg};
              --post-text: ${palette.text};
              --post-accent: ${palette.accent};
            `}>
              <h2 class="post-title">
                <a href={postUrl}>{post.frontmatter.title}</a>
              </h2>
              
              <div class="post-meta">
                <time class="post-date" datetime={post.frontmatter.date}>
                  {new Date(post.frontmatter.date).toLocaleDateString('it-IT', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                
                {post.frontmatter.categories && (
                  <div class="post-categories">
                    {post.frontmatter.categories.map((category) => (
                      <span class="category">{category}</span>
                    ))}
                  </div>
                )}
              </div>
              
              {post.frontmatter.excerpt && (
                <p class="post-excerpt">{post.frontmatter.excerpt}</p>
              )}
              
              <a href={postUrl} class="read-more">Leggi tutto →</a>
            </article>
          );
        })}
      </div>
    ) : (
      <div class="no-posts">
        <p>Nessun post disponibile ancora.</p>
      </div>
    )}
  </div>
</Layout>

<style is:global>
  /* Layout 
  .contrappunti-page {
    max-width: 1200;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    background: var(--blog-bg);
  }*/

  /* Header */
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 0 1rem;
  }

  .page-title {
    font-family: var(--font-heading-primary);
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 300;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
    line-height: 1.1;
  }

  .page-description {
    font-family: var(--font-heading-secondary);
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .page-rule {
    height: 2px;
    background-color: var(--color-accent);
    border: none;
    width: 80px;
    margin: 0 auto;
  }

  /* Lista Post */
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Card Post */
  .post-item {
    background: var(--post-bg);
    border-radius: 8px;
    padding: 1.5rem;
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-md);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
  }

  .post-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .post-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 100%;
    background: var(--post-accent);
    opacity: 0.7;
  }

  /* Titolo */
  .post-title {
    font-family: var(--font-heading-primary);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--post-text);
    line-height: 1.3;
  }

  .post-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-title a:hover {
    color: var(--post-accent);
  }

  /* Metadati */
  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--post-accent);
    text-transform: uppercase;
    letter-spacing: 0.03em;
    font-weight: 500;
  }

  /* Categorie */
  .post-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .category {
    background: var(--post-accent);
    color: white;
    padding: 0.2rem 0.6rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 3px;
    transition: all 0.2s ease;
  }

  .category:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  :global([data-theme="dark"]) .category {
    background: color-mix(in srgb, var(--post-accent) 90%, black);
  }

  /* Estratto */
  .post-excerpt {
    color: color-mix(in srgb, var(--post-text) 70%, transparent);
    line-height: 1.5;
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  /* Link Leggi tutto */
  .read-more {
    font-family: var(--font-heading-secondary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--post-accent);
    text-decoration: none;
    font-size: 0.85rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: all 0.2s ease;
  }

  .read-more:hover {
    color: var(--post-text);
    gap: 0.5rem;
  }

  /* Nessun post */
  .no-posts {
    text-align: center;
    padding: 2rem;
    color: #7f8c8d;
    font-style: italic;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px dashed #ddd;
    margin-top: 1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contrappunti-page {
      padding: 1rem;
      max-width: 95%;
    }
    
    .page-header {
      margin-bottom: 2rem;
    }
    
    .page-title {
      font-size: 1.75rem;
    }
    
    .page-description {
      font-size: 0.95rem;
    }
    
    .post-item {
      padding: 1.25rem;
    }
    
    .post-title {
      font-size: 1.15rem;
    }
    
    .post-excerpt {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .page-page {
      padding: 0.75rem;
    }
    
    .page-title {
      font-size: 1.5rem;
    }
    
    .post-item {
      padding: 1rem;
    }
    
    .post-title {
      font-size: 1.1rem;
    }
    
    .category {
      padding: 0.15rem 0.4rem;
      font-size: 0.65rem;
    }
  }
</style>

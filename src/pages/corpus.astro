<style is:global>
  /* Layout */
  .pubblicazioni-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Header */
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 0 1rem;
  }

  .page-title {
    font-family: var(--font-heading-primary);
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 300;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
    line-height: 1.1;
  }

  .page-description {
    font-family: var(--font-heading-secondary);
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .page-rule {
    height: 2px;
    background-color: var(--color-accent);
    border: none;
    width: 80px;
    margin: 0 auto;
  }

  /* Covers Section */
  .covers-section {
    padding: 2rem 0;
  }

  .section-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 2rem;
    text-align: center;
    position: relative;
    padding-bottom: 1rem;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 1px;
    background-color: var(--color-accent);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Grid con proporzioni fisse per ogni cover-item */
  .covers-grid {
    display: grid;
    /* Calcolo: 1410:2250 = 0.6267 rapporto larghezza:altezza */
    /* Per una griglia di 3 elementi su desktop, usiamo una larghezza fissa */
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem 2rem;
    margin-top: 2rem;
  }

  /* Cover item principale - con proporzioni di un libro */
  .cover-item {
    position: relative;
    /* Larghezza fissa per mantenere le proporzioni */
    width: 100%;
    /* Altezza calcolata in base alle proporzioni 1410:2250 */
    /* Se vogliamo mantenere le proporzioni esatte, usiamo un'altezza calcolata */
    /* Ma meglio usare un aspect-ratio container */
    aspect-ratio: 1410 / 2250;
    display: block;
    background-color: var(--post-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    overflow: hidden;
  }

  /* Fallback per browser che non supportano aspect-ratio */
  .cover-item::before {
    content: '';
    display: block;
    padding-bottom: 100%; /* 2250 / 1410 * 100% */
  }

  .cover-item:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-accent);
  }

    /* Contenuto interno che riempie tutto il cover-item */
  .cover-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 1rem 1rem 1rem 1rem;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
  }

  /* Immagine della copertina che occupa la maggior parte dello spazio */
  .cover-image-wrapper {
    flex: 1;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    background-color: var(--color-surface);
    margin-bottom: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .cover-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .cover-item:hover .cover-image {
    transform: scale(1.03);
  }

  /* Info sotto l'immagine */
  .cover-info {
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
  }

  .cover-title {
    font-family: var(--font-heading-primary);
    font-size: 1.1rem;
    font-weight: 400;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .cover-subtitle {
    font-family: var(--font-heading-secondary);
    font-size: 0.8rem;
    font-weight: 350;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .cover-meta {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-text-muted);
  }

  .cover-year,
  .cover-pages {
    background-color: var(--color-surface);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }

  .cover-link {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-family: var(--font-heading-secondary);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-align: center;
    transition: all 0.2s ease;
  }

  .cover-link:hover {
    background-color: color-mix(in srgb, var(--color-accent) 80%, black);
    transform: translateY(-1px);
  }

  /* Effetto ombra per l'immagine */
  .cover-image-wrapper::after {
    content: '';
    position: absolute;
    top: 4rem;
    left: 1.5rem;
    right: 1.5rem;
    bottom: calc(1.5rem + 150px); /* Altezza stimata per l'area info */
    box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.1);
    pointer-events: none;
    border-radius: 8px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .covers-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .pubblicazioni-page {
      padding: 1rem;
    }

    .covers-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .cover-content {
      padding: 3.5rem 1.25rem 1.25rem 1.25rem;
    }

    .cover-image-wrapper {
      margin-bottom: 0.75rem;
    }

    .cover-info {
      padding-top: 0.75rem;
    }

    .cover-image-wrapper::after {
      top: 3.5rem;
      left: 1.25rem;
      right: 1.25rem;
      bottom: calc(1.25rem + 140px);
    }
  }

  @media (max-width: 600px) {
    .covers-grid {
      grid-template-columns: 1fr;
      max-width: 280px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  @media (max-width: 480px) {
    .covers-grid {
      max-width: 250px;
    }
    
    .cover-content {
      padding: 3rem 1rem 1rem 1rem;
    }
    
    .cover-image-wrapper::after {
      top: 3rem;
      left: 1rem;
      right: 1rem;
      bottom: calc(1rem + 130px);
    }
  }
</style>
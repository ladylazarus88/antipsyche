---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL;

// Importa tutti i post in un'unica chiamata
const getPosts = () => {
   const posts = import.meta.glob(['../content/blog/*.md', '../content/blog/*.mdx', '../content/blog/claudio/*.md', '../content/blog/claudio/*.mdx'], { 
    eager: true 
  });
  
  return Object.values(posts)
    .filter(post => post.frontmatter && post.frontmatter.date)
    .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
    .slice(0, 3)
    .map(post => {
      const slug = post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '');
      return {
        ...post,
        slug,
        url: `${base}blog/${slug}`,
        formattedDate: new Date(post.frontmatter.date).toLocaleDateString('it-IT', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })
      };
    });
};

const latestPosts = getPosts();
---

<Layout title="Antipsyché" description="Un archivio che esplora la tensione tra voci marginali e canone letterario. Dove traduzione artigianale incontra pensiero inatteso in dialogo aperto.">
  <div class="landing-page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1 class="hero-title">Antipsyché</h1>
        <p class="hero-subtitle">Saggi Ritrovati e Traduzioni Inedite</p>
        <p class="hero-description">
          Un progetto nato da Instagram che esplora e traduce testi aporetici: saggi di filosofia e scienze politiche, racconti brevi e opuscoli mai pubblicati in italiano, liberi da diritto d'autore.
        </p>
      </div>
    </section>

    <!-- Ultimi Post Section -->
    <section class="latest-posts-section" id="latest-posts">
      <div class="container">
          {latestPosts.length > 0 ? (
          <>
            <div class="posts-grid">
              {latestPosts.map(post => (
                <article class="post-card">
                  <div class="post-image-container">
                    {post.frontmatter.image ? (
                      <div class="post-image">
                        <img 
                          src={post.frontmatter.image} 
                          alt={post.frontmatter.title}
                          loading="lazy"
                        />
                      </div>
                    ) : (
                      <div class="post-image placeholder">
                        <div class="placeholder-content">
                          <span>Immagine</span>
                        </div>
                      </div>
                    )}
                  </div>
                  
                  <div class="post-content">
                    <h3 class="post-title">
                      <a href={post.url}>{post.frontmatter.title}</a>
                    </h3>
                    
                    <div class="post-meta">
                      <time class="post-date" datetime={post.frontmatter.date}>
                        {post.formattedDate}
                      </time>
                    </div>
                    
                    {post.frontmatter.excerpt && (
                      <p class="post-excerpt">{post.frontmatter.excerpt}</p>
                    )}
                    
                    <a href={post.url} class="read-link">Leggi →</a>
                  </div>
                </article>
              ))}
            </div>
            
            <!-- Link per vedere tutti i post -->
            <div class="view-all-container">
              <a href={`${base}blog`} class="view-all-link">
                Sfoglia la galleria completa dei post
              </a>
            </div>
          </>
        ) : (
          <div class="no-posts">
            <p>Nessun post disponibile ancora.</p>
          </div>
        )}
      </div>
    </section>

    <!-- Download Pubblicazioni -->
    <section class="downloads-section" id="downloads">
      <div class="container">
        <h2 class="section-title">Prime Traduzioni</h2>
        <div class="downloads-grid">
          <div class="download-item">
            <div class="download-header">
              <span class="download-number">01</span>
              <h3 class="download-title">Ida Hoffman</h3>
            </div>
            <div class="download-content">
              <div class="link-placeholder">link per scaricare</div>
            </div>
          </div>
          
          <div class="download-item">
            <div class="download-header">
              <span class="download-number">02</span>
              <h3 class="download-title">Ernst Bloch</h3>
            </div>
            <div class="download-content">
              <div class="link-placeholder">link per scaricare</div>
            </div>
          </div>
          
          <div class="download-item">
            <div class="download-header">
              <span class="download-number">03</span>
              <h3 class="download-title">Cento Cooki</h3>
            </div>
            <div class="download-content">
              <div class="link-placeholder">link per scaricare</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style is:global>
  /* ===== STILI HERO CONDIVISI (per tutte le pagine) ===== */
  .hero {
    text-align: center;
    padding: 1rem 0 1rem;
    background: transparent;
    width: 100%;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .hero-title {
    font-family: var(--font-heading-primary);
    font-size: 2rem;
    font-weight: 300;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    line-height: 1;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-family: var(--font-heading-secondary);
    font-size: 4rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.6rem;
    line-height: 1.6;
    color: var(--color-text-primary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* ===== LAYOUT BASE ===== */
  .landing-page {
    width: 100%;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0;
  }

  /* ===== SEZIONE ULTIMI POST ===== */
  .latest-posts-section {
    padding: 3rem 0;
  }

  .section-title {
    font-family: var(--font-heading-secondary);
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-accent);
    text-transform: none;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
    text-align: center;
  }

  .posts-grid {
    display: grid;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .post-card {
    background-color: var(--color-surface);
    border: 0px;
    border-radius: var(--border-radius);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .post-image-container {
    width: 100%;
    overflow: hidden;
    background: var(--color-background);
  }

  .post-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-image.placeholder {
    background-color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-content {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .post-content {
    padding: 0.3rem;
  }

  .post-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.6rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-title a:hover {
    color: var(--color-accent);
  }

  .post-meta {
    margin-bottom: 1rem;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.5;
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: auto;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-link {
    font-size: 1.3rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    color: var(--color-accent);
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s ease;
  }

  .read-link:hover {
    transform: translateX(4px);
  }

  /* Link per vedere tutti i post */
  .view-all-container {
    text-align: center;
    padding: 1rem 0;
  }

  .view-all-link {
    display: inline-block;
    font-family: var(--font-heading-secondary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-accent);
    border-radius: var(--border-radius);
    transition: all 0.2s ease;
  }

  .view-all-link:hover {
    background-color: var(--color-accent);
    color: white;
  }

  /* ===== SEZIONE DOWNLOAD ===== */
  .downloads-section {
    padding: 3rem 0;
    background-color: var(--color-surface);
  }

  .downloads-grid {
    display: grid;
    gap: 2rem;
  }

  .download-item {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: 1.5rem;
  }

  .download-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .download-number {
    font-family: var(--font-heading-primary);
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--color-accent);
  }

  .download-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .download-content {
    margin-top: 1rem;
  }

  .link-placeholder {
    font-family: var(--font-mono);
    background-color: var(--color-text-primary);
    color: var(--color-background);
    padding: 1rem;
    border-radius: 4px;
    text-align: center;
    font-size: 0.9rem;
  }

  .no-posts {
    text-align: center;
    padding: 2rem;
    color: var(--color-text-muted);
    font-style: italic;
    background: var(--color-background);
    border-radius: var(--border-radius);
    border: 1px dashed var(--color-border);
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0;
    }
    
    .hero-title {
      font-size: 1.75rem;
      letter-spacing: 0.2em;
    }
    
    .hero-subtitle {
      font-size: 0.95rem;
    }
    
    .hero-description {
      font-size: 1.3rem;
    }
    
    .latest-posts-section,
    .downloads-section {
      padding: 2rem 0;
    }
    
    .section-title {
      font-size: 1.25rem;
    }
  }

  @media (min-width: 769px) {
    .posts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .downloads-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 3rem;
    }
  }
</style>
---
import Layout from '../components/Layout.astro';
const base = import.meta.env.BASE_URL;

// Configurazione
const POSTS_PER_PAGE = 6;

// Funzione per ottenere i post
const getPosts = () => {
  // Importa tutti i post
  const posts = import.meta.glob([
    '../content/blog/*.md',
    '../content/blog/*.mdx',
    '../content/blog/claudio/*.md',
    '../content/blog/claudio/*.mdx'
  ], { eager: true });
  
  return Object.values(posts)
    .filter(post => post.frontmatter && post.frontmatter.date)
    .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
    .slice(0, POSTS_PER_PAGE)
    .map(post => {
      const slug = post.file.split('/').pop()?.replace(/\.(md|mdx)$/, '');
      return {
        title: post.frontmatter.title,
        image: post.frontmatter.image,
        date: post.frontmatter.date,
        slug: slug,
        url: `${base}blog/${slug}`,
        formattedDate: new Date(post.frontmatter.date).toLocaleDateString('it-IT', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })
      };
    });
};

const latestPosts = getPosts();
---

<Layout 
  title="Antipsyché" 
  description="Un archivio che esplora la tensione tra voci marginali e canone letterario. Dove traduzione artigianale incontra pensiero inatteso in dialogo aperto."
>
  <div class="landing-page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1 class="hero-title">Antipsyché</h1>
        <p class="hero-subtitle">Saggi Ritrovati e Traduzioni Inedite</p>
        <hr class="page-rule" />
        <p class="hero-description">
          Un archivio che esplora la tensione tra voci marginali e canone letterario. Dove traduzione artigianale incontra pensiero inatteso in dialogo aperto.
        </p>
        <hr class="page-rule" />
      </div>
    </section>

    <!-- Ultimi Post Section -->
    <section class="latest-posts-section" id="latest-posts">
      <div class="container">
        {latestPosts.length > 0 ? (
          <>
            <h2 class="section-title">Ultimi Post</h2>
            <div class="posts-grid">
              {latestPosts.map((post, index) => (
                <article class="post-card">
                  <a href={post.url} class="post-link">
                    <div class="post-image-container">
                      {post.image ? (
                        <div class="post-image">
                          <img 
                            src={post.image} 
                            alt={post.title}
                            loading={index < 3 ? "eager" : "lazy"}
                          />
                        </div>
                      ) : (
                        <div class="post-image placeholder">
                          <div class="placeholder-content"></div>
                        </div>
                      )}
                    </div>
                    
                    <div class="post-content">
                      <h3 class="post-title">{post.title}</h3>
                      <div class="post-meta">
                        <time class="post-date" datetime={post.date}>
                          {post.formattedDate}
                        </time>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
            
            <!-- Link per vedere tutti i post -->
            <div class="view-all-container">
              <a href={`${base}blog`} class="view-all-link">
                Sfoglia la galleria completa
              </a>
            </div>
          </>
        ) : (
          <div class="no-posts">
            <p>Nessun post disponibile ancora.</p>
          </div>
        )}
      </div>
    </section>

    <!-- Download Pubblicazioni -->
    <section class="downloads-section" id="downloads">
      <div class="container">
        <h2 class="section-title">Prime Traduzioni</h2>
        <div class="downloads-grid">
          <div class="download-item">
            <div class="download-header">
              <span class="download-number">01</span>
              <h3 class="download-title">Ida Hoffman</h3>
            </div>
            <div class="download-content">
              <div class="link-placeholder">link per scaricare</div>
            </div>
          </div>
          
          <div class="download-item">
            <div class="download-header">
              <span class="download-number">02</span>
              <h3 class="download-title">Ernst Bloch</h3>
            </div>
            <div class="download-content">
              <div class="link-placeholder">link per scaricare</div>
            </div>
          </div>
          
          <div class="download-item">
            <div class="download-header">
              <span class="download-number">03</span>
              <h3 class="download-title">Cento Cooki</h3>
            </div>
            <div class="download-content">
              <div class="link-placeholder">link per scaricare</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style is:global>
  /* ===== STILI HERO ===== */
  .hero {
    text-align: center;
    padding: 1rem 0 1rem;
    width: 100%;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--content-padding, 20px);
  }

  .hero-title {
    font-family: var(--font-heading-primary);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 300;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    line-height: 1;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-family: var(--font-heading-secondary, serif);
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-description {
    font-size: clamp(1.2rem, 2vw, 1.6rem);
    line-height: 1.6;
    color: var(--color-text-primary);
    max-width: 600px;
    margin: 0 auto;
  }

  .page-rule {
    height: 2px;
    background-color: var(--color-accent);
    border: none;
    width: 80px;
    margin: 2rem auto 0;
    margin-bottom: 2rem;
  }
  /* ===== LAYOUT BASE ===== */
  .landing-page {
    width: 100%;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--content-padding, 20px);
  }

  /* ===== SEZIONE ULTIMI POST ===== */
  .latest-posts-section {
    padding: 3rem 0;
  }

  .section-title {
    font-family: var(--font-heading-secondary, serif);
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 100;
    color: var(--color-accent);
    text-transform: none;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
    text-align: center;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .post-card {
    border-radius: var(--border-radius, 4px);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    background: var(--color-background);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .post-image-container {
    width: 200%;
    overflow: hidden;
    aspect-ratio: 16/9;
  }

  .post-image {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease, filter 0.3s ease;
    filter: grayscale(100%);
  }
  
  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-image.placeholder {
    background-color: var(--color-surface);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-content {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .post-content {
    padding: 1.25rem;
  }

  .post-title {
    font-family: var(--font-heading-secondary);
    font-size: clamp(1.1rem, 2vw, 1.4rem);
    font-weight: 500;
    margin-bottom: 0.75rem;
    line-height: 1.4;
    color: var(--color-text-primary);
  }

  .post-meta {
    margin-top: 0.5rem;
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Link per vedere tutti i post */
  .view-all-container {
    text-align: center;
    padding: 2rem 0 0;
  }

  .view-all-link {
    display: inline-block;
    font-family: var(--font-heading-secondary);
    font-weight: 300;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-accent);
    border-radius: var(--border-radius, 4px);
    transition: all 0.2s ease;
  }

  .view-all-link:hover {
    background-color: var(--color-accent);
    color: white;
  }

  /* ===== SEZIONE DOWNLOAD ===== */
  .downloads-section {
    padding: 3rem 0;
    background-color: var(--color-surface);
  }

  .downloads-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  .download-item {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius, 4px);
    padding: 1.5rem;
  }

  .download-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .download-number {
    font-family: var(--font-heading-primary);
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--color-accent);
  }

  .download-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .download-content {
    margin-top: 1rem;
  }

  .link-placeholder {
    font-family: var(--font-mono);
    background-color: var(--color-surface);
    color: var(--color-text-muted);
    padding: 1rem;
    border-radius: 4px;
    text-align: center;
    font-size: 0.9rem;
    border: 1px dashed var(--color-border);
  }

  .no-posts {
    text-align: center;
    padding: 3rem;
    color: var(--color-text-muted);
    font-style: italic;
    background: var(--color-surface);
    border-radius: var(--border-radius, 4px);
    border: 1px dashed var(--color-border);
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (min-width: 640px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .downloads-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 992px) {
    .posts-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .downloads-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Dark mode adjustments */
  :global([data-theme="dark"]) {
    .post-card {
      background: var(--color-surface);
    }
    
    .download-item {
      background: rgba(255, 255, 255, 0.03);
    }
  }
</style>